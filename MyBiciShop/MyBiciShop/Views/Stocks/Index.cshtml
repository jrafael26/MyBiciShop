@model IEnumerable<MyBiciShop.Models.Stocks>

@{
    ViewBag.Title = "Index";
}

<h2>Asignar producto a tiendas</h2>

<p>
    @Html.ActionLink("Nueva", "Create", null, new { @class = "btn btn-warning btn-xs" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Stores.store_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Stores.store_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.stock_id }, new { @class = "glyphicon glyphicon-edit btn btn-info btn-xs" })
            @Html.ActionLink("Details", "Details", new { id = item.stock_id }, new { @class = "glyphicon glyphicon-list btn btn-success btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id = item.stock_id }, new { @class = "glyphicon glyphicon-remove btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
